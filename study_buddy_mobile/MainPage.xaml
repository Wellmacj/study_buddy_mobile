<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="study_buddy_mobile.MainPage">

    <VerticalStackLayout
    Padding="30"
    Spacing="20"
    VerticalOptions="Center">

        <Label
        Text="Study Buddy Home Page"
        FontSize="32"
        HorizontalOptions="Center" />

        <Grid
        RowDefinitions="Auto"
        ColumnDefinitions="*,*"
        ColumnSpacing="10">

            <Button Text="Timer" Grid.Column="0" Clicked="OnTimerClicked" />
            <Button Text="Calendar" Grid.Column="1" Clicked="OnCalendarClicked" />

        </Grid>
    </VerticalStackLayout>


</ContentPage>


