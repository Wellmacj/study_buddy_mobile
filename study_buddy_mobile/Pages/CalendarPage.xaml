<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="study_buddy_mobile.Pages.CalendarPage"
             Title="Study Buddy Calendar Picker">
    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Select a date:" FontSize="20" />

        <DatePicker x:Name="CalendarPicker"
                    DateSelected="CalendarPicker_DateSelected"
                    Format="D" />

        <Label Text="Add a Task:" FontSize="18" />

        <HorizontalStackLayout>
            <Entry x:Name="TaskEntry" Placeholder="Enter task..." HorizontalOptions="FillAndExpand"/>
            <Button Text="Add" Clicked="AddTask_Clicked" />
        </HorizontalStackLayout>

        <Label x:Name="SelectedDateLabel" FontSize="16" />

        <CollectionView x:Name="TaskListView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="Gray">
                        <HorizontalStackLayout>
                            <Label Text="{Binding Title}" VerticalOptions="Center" HorizontalOptions="StartAndExpand"/>
                            <Button Text="Delete" Clicked="DeleteTask_Clicked" 
                        CommandParameter="{Binding .}" 
                        BackgroundColor="LightCoral" 
                        TextColor="White" />
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>