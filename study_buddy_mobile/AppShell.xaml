<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="study_buddy_mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:study_buddy_mobile"
    Title="study_buddy_mobile">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate pages:MainPage}" />
        <ShellContent Title="Calendar" ContentTemplate="{DataTemplate pages:CalendarPage}" />
        <ShellContent Title="To-Do List" ContentTemplate="{DataTemplate pages:TodoListPage}" />
        <ShellContent Title="Study Buzzer" ContentTemplate="{DataTemplate pages:StudyBuzzerPage}" />
        <ShellContent Title="Study Tracker" ContentTemplate="{DataTemplate pages:StudyTrackerPage}" />
        <ShellContent Title="Canvas Submit" ContentTemplate="{DataTemplate pages:CanvasSubmitPage}" />
    </TabBar>
</Shell>
